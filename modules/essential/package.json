{
	"name": "@nikkierp/microapp-essential",
	"version": "0.0.1",
	"private": false,
	"type": "module",
	"scripts": {
		"clean": "rimraf dist",
		"dev": "bash -c \"NIKKI_BFF_HTTP_PORT=3001 NIKKI_BFF_CLIENT_ROOT_PATH=$(realpath .) ts-node ../../apps/shellbff/src/server.ts\"",
		"dev:dist": "bash -c \"NODE_ENV=production NIKKI_BFF_HTTP_PORT=3001 NIKKI_BFF_CLIENT_ROOT_PATH=$(realpath ./dist) ts-node ../../apps/shellbff/src/server.ts\"",
		"build": "pnpm clean && tsc && vite build",
		"typecheck": "tsc --noEmit",
		"lint": "pnpm eslint && pnpm stylelint",
		"eslint": "eslint . --cache",
		"stylelint": "stylelint '**/*.css' --cache",
		"test": "pnpm typecheck && pnpm lint && pnpm vitest"
	},
	"dependencies": {
		"@hookform/resolvers": "~5.2.2",
		"@mantine/core": "~8.3.5",
		"@mantine/dates": "~8.3.5",
		"@mantine/dropzone": "~8.3.5",
		"@mantine/form": "~8.3.5",
		"@mantine/hooks": "8.3.5",
		"@mantine/modals": "~8.3.5",
		"@mantine/notifications": "~8.3.5",
		"@nikkierp/common": "workspace:*",
		"@nikkierp/ui": "workspace:*",
		"@tabler/icons-react": "~3.35.0",
		"chart.js": "~4.5.1",
		"clsx": "~2.1.1",
		"dayjs": "~1.11.18",
		"i18next": "~25.6.0",
		"ky": "~1.13.0",
		"react-hook-form": "~7.65.0",
		"react-i18next": "~16.2.0",
		"zod": "~4.1.12"
	},
	"devDependencies": {
		"@reduxjs/toolkit": "~2.9.2",
		"@storybook/react": "~9.1.15",
		"@tailwindcss/postcss": "~4.1.16",
		"@tailwindcss/vite": "~4.1.16",
		"@testing-library/dom": "~10.4.1",
		"@testing-library/jest-dom": "~6.9.1",
		"@testing-library/react": "~16.3.0",
		"@testing-library/user-event": "~14.6.1",
		"@types/node": "~24.9.1",
		"@types/react": "~19.2.2",
		"@types/react-dom": "~19.2.2",
		"@vitejs/plugin-react": "~5.1.0",
		"cross-env": "~10.1.0",
		"postcss": "~8.5.6",
		"postcss-preset-mantine": "1.18.0",
		"postcss-simple-vars": "~7.0.1",
		"react": "~19.2.0",
		"react-dom": "~19.2.0",
		"react-redux": "~9.2.0",
		"react-router": "~7.9.4",
		"react-router-dom": "~7.9.4",
		"tailwindcss": "~4.1.16",
		"typescript": "~5.9.3",
		"vite": "~7.1.12",
		"vite-tsconfig-paths": "~5.1.4",
		"vitest": "~4.0.3"
	},
	"peerDependencies": {
		"@reduxjs/toolkit": "~2.9.1",
		"react": "~19.2.0",
		"react-dom": "~19.2.0",
		"react-router": "~7.9.4",
		"react-router-dom": "~7.9.4"
	},
	"sideEffects": [
		"**/*.css",
		"**/src/index.tsx"
	],
	"exports": {
		".": "./src/index.tsx"
	},
	"files": [
		"src",
		"README.md"
	]
}