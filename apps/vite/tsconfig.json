{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "dist",
		"jsx": "react-jsxdev",
		"sourceMap": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"target": "es2020",
		"types": [
			"vitest/globals"
		],
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		],
		"paths": {
			"@/*": [
				"./src/*"
			],
			"@*": [
				"./src/*"
			],
			"@components/*": [
				"./src/components/*"
			],
			"@modules/*": [
				"./src/modules/*"
			],
			"@core/*": [
				"./src/modules/core/*"
			],
			"@assets/*": [
				"./src/assets/*"
			],
			"@lib/*": [
				"./src/lib/*"
			],
			"@screens/*": [
				"./src/screens/*"
			],
			"@server/*": [
				"./server"
			],
			"@public/*": [
				"./public"
			],
			"@utils/*": [
				"./src/utils/*"
			],
			"@hooks/*": [
				"./src/hooks/*"
			],
			"@types/*": [
				"./types/*"
			],
			"@loaders/*": [
				"./src/loaders/*"
			],
			"@client/*": [
				"./src/*"
			],
		}
	},
	"include": [
		"src/**/*",
		"types/*",
		"node_modules/vite/types/*",
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}