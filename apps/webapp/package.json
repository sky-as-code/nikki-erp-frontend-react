{
	"name": "webapp",
	"private": true,
	"type": "module",
	"version": "0.0.0",
	"scripts": {
		"clean": "rimraf dist",
		"dev": "bash -c \"NIKKI_BFF_HTTP_PORT=3000 NIKKI_BFF_CLIENT_ROOT_PATH=$(realpath .) ts-node ../shellbff/src/server.ts\"",
		"build": "npm run clean && npm run build:client && npm run build:server",
		"build:client": "tsc && vite build --outDir dist",
		"build:server": "tsc -p tsconfig.server.json",
		"typecheck": "tsc --noEmit",
		"lint": "npm run eslint && npm run stylelint",
		"eslint": "eslint . --cache",
		"stylelint": "stylelint '**/*.css' --cache",
		"test": "npm run typecheck && npm run prettier && npm run lint && npm run vitest && npm run build",
		"storybook": "storybook dev -p 6006",
		"storybook:build": "storybook build"
	},
	"dependencies": {
		"@mantine/core": "8.3.5",
		"@mantine/dates": "~8.3.5",
		"@mantine/dropzone": "~8.3.5",
		"@mantine/form": "~8.3.5",
		"@mantine/hooks": "8.3.5",
		"@mantine/modals": "~8.3.5",
		"@mantine/notifications": "~8.3.5",
		"@nikkierp/common": "workspace:*",
		"@nikkierp/microapp-essential": "workspace:*",
		"@nikkierp/shell": "workspace:*",
		"@nikkierp/ui": "workspace:*",
		"@tailwindcss/vite": "~4.1.15",
		"clsx": "~2.1.1",
		"react": "~19.2.0",
		"react-dom": "~19.2.0",
		"react-router": "~7.9.4",
		"react-router-dom": "~7.9.4"
	},
	"devDependencies": {
		"@storybook/addon-themes": "~9.1.13",
		"@storybook/react": "~9.1.13",
		"@storybook/react-vite": "~9.1.13",
		"@tailwindcss/postcss": "~4.1.15",
		"@tanstack/react-query-devtools": "~5.90.2",
		"@testing-library/dom": "~10.4.1",
		"@testing-library/jest-dom": "~6.9.1",
		"@testing-library/react": "~16.3.0",
		"@testing-library/user-event": "~14.6.1",
		"@types/node": "~24.9.1",
		"@types/react": "~19.2.2",
		"@types/react-dom": "~19.2.2",
		"@typescript-eslint/parser": "~8.46.2",
		"@vitejs/plugin-react": "~5.0.4",
		"cross-env": "~10.1.0",
		"eslint-config-mantine": "~4.0.3",
		"jsdom": "~27.0.1",
		"postcss": "~8.5.6",
		"postcss-preset-mantine": "1.18.0",
		"postcss-simple-vars": "~7.0.1",
		"storybook": "~9.1.13",
		"stylelint": "~16.25.0",
		"stylelint-config-standard-scss": "~16.0.0",
		"tailwindcss": "~4.1.15",
		"typescript": "~5.9.3",
		"vite": "~7.1.11",
		"vite-tsconfig-paths": "~5.1.4",
		"vitest": "~4.0.1"
	}
}